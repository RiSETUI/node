<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Network Monitoring</title>
    <link rel="stylesheet" href="/css/tailwind.css">
    <script src="/js/chart.js"></script>
    <script src="/icons/lucide-icons.js"></script>
</head>
<body class="bg-gray-100">
    <%- include('../partials/header.ejs') %>
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Network Monitoring</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-white shadow-md rounded-lg p-4">
                <h2 class="text-xl font-semibold">Upload Speed</h2>
                <canvas id="uploadChart"></canvas>
            </div>
            <div class="bg-white shadow-md rounded-lg p-4">
                <h2 class="text-xl font-semibold">Download Speed</h2>
                <canvas id="downloadChart"></canvas>
            </div>
        </div>
        <div class="bg-white shadow-md rounded-lg p-4 mt-4">
            <h2 class="text-xl font-semibold">ISP Information</h2>
            <div id="ispInfo" class="mt-2">
                <!-- ISP information will be dynamically inserted here -->
            </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>
    <script src="/js/main.js"></script>
</body>
</html>